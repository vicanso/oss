@import './mixins/vicanso'
$leftContainerWidth = 60px
#leftContainer
  position fixed
  left 0
  top 0
  bottom 0
  width $leftContainerWidth
  background-color #333
  border-right 1px solid #222
  z-index 9

#othersContainer
  height 100%
  margin-left $leftContainerWidth + 5

#objectTableContainer
  height 100%
  position relative
  .title
    height 30px
    line-height @height
.objAttrDialog
  $border = 1px solid #c0c0c0
  .content
    height 200px
    overflow auto
  table
    border $border
    td, th
      border-top $border
      height 20px
      line-height @height
      padding 5px 10px
    .value
      height 24px
      line-height @height
      padding 2px 10px
      .inputContainer
        input
          text-indent 5px
          width 100%
          height 22px
          line-height @height
    .param
      width 120px
    .op
      padding 5px 0
      width 40px
    .metaSelectContainer
      padding-left 0
      padding-right 0
      .metaSelect
        .jtSelect
          width 135px
        .userInput
          width 110px
#loadingMask
  display none
  position fixed
  left 0
  top 0
  right 0
  bottom 0
  z-index 99
  .bgExec
    padding 10px
    color #000
    float right
  background rgba(255, 255, 255, 0.8) url(../images/loading.gif) no-repeat center

#msgListContainer
  position fixed
  right 0
  top 0
  width 100px

#loginDialog
  display none
  position fixed
  top 100
  left 50%
  width 400px
  margin-left -(@width / 2)
  .inputItem
    margin-top 10px
    .name
      inlineBlock()
      width 75px
    input
      width 300px

