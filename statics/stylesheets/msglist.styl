@import './mixins/vicanso'
.msgList
  background-color #f2f2f2
  border 1px solid #e0e0e0
  .title
    height 20px
    line-height @height
    background-color #f0f0f0
    .total
      display none
      color #800000
    .minimize, .maximize
      float right
      display block
      color #0a0a0a
      opacity 0.6
    .minimize
      width 20px
      height 100%
      text-align center
      margin-right 2px
      font-size 25px
      line-height 12px
    .maximize
      width 10px
      height 10px
      border 2px solid #080808
      margin 4px 10px 0 0
      display none
  .items
    height 70px
    overflow-y scroll
    .item
      height 25px
      line-height @height
      text-indent 5px
      overflow hidden
      border-bottom 1px solid #e0e0e0
      word-break break-all
      word-wrap break-word
      .progress
        float right
        display none
        height 16px
        width 100px
        margin 5px 25px 0 0
        overflow hidden
        background-color #f7f7f7
        vicansoGradient #f5f5f5, #f9f9f9
        border-radius 4px
        box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
        .progressBar
          width 0
          height 100%
          background-color #428bca
      &.doing
        background url(../images/iloading.png) no-repeat right center
        .progress
          display block
      &:nth-child(2n)
        background-color #f7f7f7
      &:nth-child(2n + 1)
        background-color #eff2ff

  &.largeMsgListContainer
    .items .item
      float left
      width 50%
      &:nth-child(4n + 4)
        background-color #eff2ff
      &:nth-child(4n + 1)
        background-color #eff2ff
      &:nth-child(4n + 2)
        background-color #f7f7f7
      &:nth-child(4n + 3)
        background-color #f7f7f7