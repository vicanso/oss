.opContainer
  position absolute
  left 0
  bottom 0
  right 0
  height $opContainerHeight
  .op
    display block
    height 30px
    line-height @height
    text-align center
    border-bottom 1px solid #444
    background-color #333
    &:hover
      background-color #222
    a
      border-top 1px solid #222
      display block
      color #e0e0e0
